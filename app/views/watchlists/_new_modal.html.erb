<div class="modal fade" id="newWatchlistModal" tabindex="-1" aria-labelledby="newWatchlistModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="newWatchlistModalLabel">New Watchlist</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <%= form_with(model: @watchlist || Watchlist.new, url: watchlists_path, local: true) do |f| %>
        <div class="modal-body">
          <div class="mb-3">
            <%= f.label :name, "Watchlist Name", class: "form-label" %>
            <%= f.text_field :name, class: "form-control", required: true %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-nav" data-bs-dismiss="modal">Cancel</button>
          <%= f.submit "Create Watchlist", class: "btn btn-highlight" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
