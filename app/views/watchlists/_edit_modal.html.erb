<div class="modal fade" id="editWatchlistModal<%= watchlist.id %>" tabindex="-1" aria-labelledby="editWatchlistModalLabel<%= watchlist.id %>" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="editWatchlistModalLabel<%= watchlist.id %>">Edit Watchlist</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <%= form_with(model: watchlist, url: watchlist_path(watchlist), local: true) do |f| %>
        <div class="modal-body">
          <div class="mb-3">
            <%= f.label :name, "Watchlist Name", class: "form-label" %>
            <%= f.text_field :name, class: "form-control", required: true %>
          </div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <%= f.submit "Update Watchlist", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
